<%= form_with(model: recipe) do |form| %>
<% if recipe.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% recipe.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :title, class: label_class %>
          <%= form.text_field :title, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :publication_date, class: label_class %>
          <%= form.date_field :publication_date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :calories_per_serving, class: label_class %>
          <%= form.number_field :calories_per_serving, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :category_id, class: label_class %>
        <%= form.select :category_id, options_from_collection_for_select(
          Category.all, 'id', 'name', selected = recipe.category_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :review, class: label_class %>
          <%= form.text_field :review, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :instruction, class: label_class %>
          <%= form.text_area :instruction, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if recipe.persisted? %>
<%= link_to "Cancel", recipe, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", recipes_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
